<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_place"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/ckbxPlaceVisited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/list_place_padding" />

    <TextView
        android:id="@+id/txtPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ckbxPlaceVisited"
        android:padding="@dimen/list_place_padding"
        android:textStyle="bold"
        android:tooltipText="@string/place_title_hint"
        android:textSize="@dimen/list_place_item_font_size"/>


</RelativeLayout>